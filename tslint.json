{
  "rulesDirectory": [
    "node_modules/tslint-react/rules"
  ],
  "extends": [
    "tslint-eslint-rules"
  ],
  "rules": {
    "adjacent-overload-signatures": true,
    "align": [true, "parameters", "statements", "elements"],
    "array-bracket-spacing": [true, "never"],
    "array-type": [true, "array-simple"],
    "arrow-parens": true,
    "await-promise": true,
    "ban-comma-operator": true,
    "ban-types": [true, ["String"], ["Boolean"], ["Number"]],
    "block-spacing": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "eofline": true,
    "forin": true,
    "indent": [true, "spaces"],
    "import-spacing": true,
    "jsdoc-format": true,
    "label-position": true,
    "linebreak-style": [true, "LF"],
    "max-line-length": [true, 105],
    "no-conditional-assignment": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-multi-spaces": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-shadowed-variable": true,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "object-curly-spacing": [true, "always", { "objectsInObjects": false }],
    "object-literal-shorthand": [true, "never"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "quotemark": [true, "single", "jsx-double"],
    "prefer-const": true,
    "radix": true,
    "semicolon": [true, "always"],
    "space-in-parens": [true, "never"],
    "switch-default": true,
    "ter-computed-property-spacing": true,
    "ter-indent": [true, 2, { "SwitchCase": 1 }],
    "ter-func-call-spacing": [true, "never"],
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true],
    "typedef-whitespace": [true, {
      "call-signature": "nospace",
      "index-signature": "nospace",
      "parameter": "nospace",
      "property-declaration": "nospace",
      "variable-declaration": "nospace"
    }],
    "use-isnan": true,
    "variable-name": [true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-typecast",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "jsx-curly-spacing": ["never"],
    "jsx-no-string-ref": true,
    "jsx-self-close": true,
    "jsx-wrap-multiline": true
  },
  "jsRules": {
    "align": [true, "parameters", "statements", "elements"],
    "array-bracket-spacing": [true, "never"],
    "arrow-parens": true,
    "ban-comma-operator": true,
    "block-spacing": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "eofline": true,
    "forin": true,
    "indent": [true, "spaces"],
    "import-spacing": true,
    "jsdoc-format": true,
    "label-position": true,
    "linebreak-style": [true, "LF"],
    "max-line-length": [true, 150],
    "no-conditional-assignment": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-multi-spaces": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-shadowed-variable": true,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "object-curly-spacing": [true, "always", { "objectsInObjects": false }],
    "object-literal-shorthand": [true, "never"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "quotemark": [true, "single", "jsx-double"],
    "prefer-const": true,
    "radix": true,
    "semicolon": [true, "always"],
    "space-in-parens": [true, "never"],
    "switch-default": true,
    "ter-computed-property-spacing": true,
    "ter-indent": [true, 2, { "SwitchCase": 1 }],
    "ter-func-call-spacing": [true, "never"],
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "triple-equals": [true, "allow-null-check"],
    "use-isnan": true,
    "variable-name": [true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-typecast",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ]
  }
}

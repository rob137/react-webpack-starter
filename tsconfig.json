{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types/", "./src/types/"],
    "baseUrl": ".",
  },
  "include": [
    "src/"
  ],
}
